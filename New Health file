pipeline {
    agent any
    tools {
        maven 'M2_HOME'
    }
    stages {
        stage('Git checkout') {
            steps {
                echo 'This is for cloning the git repo'
                git branch: 'master', url: 'https://github.com/Anne780/star-agile-health-care.git'
            }
        }
        stage('Create a package') {
            steps {
                echo 'This will create a package using Maven'
                sh 'mvn package'
            }
        }
        stage('Publish the HTML Reports') {
            steps {
                echo 'Publishing HTML Reports...'
                publishHTML([allowMissing: false, alwaysLinkToLastBuild: false, keepAll: false, reportDir: '/var/lib/jenkins/workspace', reportFiles: 'index.html', reportName: 'HTML Report', reportTitles: '', useWrapperFileDirectly: true])
            }
        }
    }
}
